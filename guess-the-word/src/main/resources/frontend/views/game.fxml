<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guesstheword.frontend.controllers.GameController"
      spacing="20" alignment="TOP_CENTER"
      stylesheets="@../styles/styles.css"
      styleClass="root-pane">

    <padding>
        <Insets top="20" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Top bar with Logout button -->
    <HBox alignment="TOP_RIGHT" spacing="10" maxWidth="Infinity">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="secondary-btn"/>
    </HBox>

    <!-- Title -->
    <Label text="ðŸŒ³ Guess The Word!" styleClass="title-label" alignment="CENTER"/>

    <!-- Word grid: initially empty 5-letter row -->
    <HBox fx:id="wordGrid" spacing="10" alignment="CENTER">
        <Label text="" styleClass="letter-box"/>
        <Label text="" styleClass="letter-box"/>
        <Label text="" styleClass="letter-box"/>
        <Label text="" styleClass="letter-box"/>
        <Label text="" styleClass="letter-box"/>
    </HBox>

    <!-- Info & attempts -->
    <HBox spacing="20" alignment="CENTER">
        <Label fx:id="attemptsLabel" text="Attempts left: 5" styleClass="info-label"/>
        <Label fx:id="messageLabel" text="" styleClass="info-label"/>
    </HBox>

    <!-- Input and submit -->
    <HBox spacing="15" alignment="CENTER">
        <TextField fx:id="guessField" promptText="Enter a word" styleClass="input-field" prefWidth="250"/>
        <Button fx:id="submitButton" text="Guess" onAction="#handleGuess" styleClass="primary-btn" prefWidth="100"/>
    </HBox>

    <!-- Game instructions -->
    <Label text="Color meanings: Green = correct, Yellow = wrong position, Gray = not in word" 
           styleClass="info-label" wrapText="true" maxWidth="400" alignment="CENTER"/>

</VBox>
