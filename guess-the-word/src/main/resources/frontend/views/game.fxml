<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guesstheword.frontend.controllers.GameController"
      spacing="15" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Guess The Word!" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Masked word display -->
    <Label fx:id="wordLabel" text="_ _ _ _ _" style="-fx-font-size: 20px;"/>

    <!-- Input field and guess button -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="guessField" promptText="Enter a letter or word" />
        <Button fx:id="submitButton" text="Guess" onAction="#handleGuess"/>
    </HBox>

    <!-- Attempts left and message label -->
    <Label fx:id="attemptsLabel" text="Attempts left: 5"/>
    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/>

    <!-- Logout button -->
    <!-- <Button text="Logout" onAction="#handleLogout"/> -->

</VBox>
