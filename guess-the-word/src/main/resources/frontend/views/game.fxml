<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guesstheword.frontend.controllers.GameController"
      spacing="15" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Guess The Word!" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Word Display -->
    <Label fx:id="wordLabel" text="_ _ _ _" style="-fx-font-size: 18px;"/>

    <!-- Input field -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="guessInput" promptText="Enter a letter or word" />
        <Button text="Guess" onAction="#handleGuess"/>
    </HBox>

    <!-- Game Info -->
    <Label fx:id="attemptsLabel" text="Attempts left: 5"/>
    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/>

    <!-- Navigation -->
    <Button text="Logout" onAction="#handleLogout"/>

</VBox>
