<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guesstheword.frontend.controllers.GameController"
      spacing="30" alignment="CENTER"
      stylesheets="@../styles/styles.css"
      styleClass="root-pane">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Top bar with Logout button -->
    <HBox alignment="TOP_RIGHT" spacing="10" maxWidth="Infinity">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="secondary-btn"/>
    </HBox>

    <!-- Title -->
    <Label text="ðŸŒ³ Guess The Word!" styleClass="title-label"/>

    <!-- Word grid -->
    <VBox fx:id="wordGrid" spacing="10" alignment="CENTER" style="-fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 20;"/>

    <!-- Input and submit -->
    <HBox spacing="15" alignment="CENTER">
        <TextField fx:id="guessField" promptText="Enter a word" styleClass="input-field" prefWidth="250"/>
        <Button fx:id="submitButton" text="Guess" onAction="#handleGuess" styleClass="primary-btn" prefWidth="100"/>
    </HBox>

    <!-- Info & messages -->
    <Label fx:id="attemptsLabel" text="Attempts left: 5" styleClass="info-label"/>
    <Label fx:id="messageLabel" text="" styleClass="error-label"/>

</VBox>
