<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guesstheword.frontend.controllers.GameController"
      spacing="20" alignment="CENTER"
      stylesheets="@../styles/styles.css"
      styleClass="root-pane">

    <padding>
        <Insets top="10" right="40" bottom="20" left="40"/>
    </padding>

    <!-- Top bar with Logout button -->
    <HBox alignment="TOP_RIGHT" spacing="10" maxWidth="Infinity">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" text="Logout"
                onAction="#handleLogout" styleClass="secondary-btn"/>
    </HBox>

    <!-- Title -->
    <Label text="ðŸŒ³ Guess The Word!"
           styleClass="title-label" alignment="CENTER"/>

    <!-- Instructions -->
    <HBox spacing="5" alignment="CENTER">
        <Label style="-fx-background-color: #6aaa64; -fx-min-width: 20; -fx-min-height: 20; -fx-background-radius: 3;"/>
        <Label text="= correct letter and correct position" styleClass="info-label"/>
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Label style="-fx-background-color: #e09524ff; -fx-min-width: 20; -fx-min-height: 20; -fx-background-radius: 3;"/>
        <Label text="= correct letter but wrong position" styleClass="info-label"/>
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Label style="-fx-background-color: #787c7e; -fx-min-width: 20; -fx-min-height: 20; -fx-background-radius: 3;"/>
        <Label text="= not in the word" styleClass="info-label"/>
    </HBox>


    <!-- Word grid -->
    <VBox fx:id="wordGrid" spacing="12" alignment="CENTER"/>

    <!-- Input row -->
    <HBox spacing="12" alignment="CENTER">
        <padding>
            <Insets top="10" right="0" bottom="0" left="0"/>
        </padding>
        <TextField fx:id="guessField" promptText="Enter a word"
                   styleClass="input-field" prefWidth="250"/>
        <Button fx:id="submitButton" text="Guess"
                onAction="#handleGuess" styleClass="primary-btn" prefWidth="100"/>
    </HBox>

    <!-- Info & messages -->
    <VBox spacing="5" alignment="CENTER">
        <Label fx:id="attemptsLabel" text="Attempts left: 5" styleClass="info-label"/>
    </VBox>

    <VBox alignment="CENTER">
        <Label fx:id="messageLabel" text="" styleClass="error-label"/>
    </VBox>

</VBox>
