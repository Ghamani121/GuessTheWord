<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guesstheword.frontend.controllers.GameController"
      spacing="25" alignment="TOP_CENTER"
      stylesheets="@../styles/styles.css"
      styleClass="root-pane">

    <padding>
        <Insets top="20" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Top bar with Logout button -->
    <HBox alignment="TOP_RIGHT" spacing="10" maxWidth="Infinity">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="secondary-btn"/>
    </HBox>

    <!-- Title -->
    <Label text="ðŸŒ³ Guess The Word!" styleClass="title-label" alignment="CENTER"/>

    <VBox fx:id="wordGrid" spacing="15" alignment="CENTER"/>


<!-- Input row -->
<HBox spacing="10" alignment="CENTER">
    <TextField fx:id="guessField" promptText="Enter a word" 
               styleClass="input-field" prefWidth="200"/>
    <Button fx:id="submitButton" text="Guess" 
            onAction="#handleGuess" styleClass="primary-btn" prefWidth="90"/>
</HBox>

    <!-- Info & messages -->
    <VBox spacing="5" alignment="CENTER">
        <Label fx:id="attemptsLabel" text="Attempts left: 5" styleClass="info-label"/>
    </VBox>
    <VBox alignment="CENTER">
        <Label fx:id="messageLabel" text="" styleClass="error-label"/>
    </VBox>

</VBox>
