<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guesstheword.frontend.controllers.RegistrationController"
      spacing="15" alignment="CENTER"
      stylesheets="@../styles/styles.css"
      styleClass="root-pane">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="ðŸŒ¿ Register User" styleClass="title-label"/>

    <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>

    <Label fx:id="messageLabel" styleClass="error-label"/>

    <HBox spacing="10" alignment="CENTER">
